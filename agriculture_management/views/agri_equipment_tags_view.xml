<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_equipment_tag_form" model="ir.ui.view">
        <field name="name">equipment.tag.form</field>
        <field name="model">equipment.tag</field>
        <field name="arch" type="xml">
            <form string="Equipment Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="color" widget="color_picker" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_equipment_tag_tree" model="ir.ui.view">
        <field name="name">equipment.tag.tree</field>
        <field name="model">equipment.tag</field>
        <field name="arch" type="xml">
            <tree string="Equipment Tags">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
